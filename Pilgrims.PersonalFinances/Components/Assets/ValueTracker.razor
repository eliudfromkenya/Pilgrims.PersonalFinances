@using Pilgrims.PersonalFinances.Models
@using System.Globalization

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
            Value Tracking
        </h3>
        <div class="flex items-center space-x-2">
            <button @onclick="ToggleView" 
                    class="px-3 py-1 text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                @(showPercentage ? "Show Values" : "Show Percentages")
            </button>
        </div>
    </div>

    <!-- Value Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <!-- Current Value -->
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-lg p-4 border border-blue-200 dark:border-blue-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-blue-600 dark:text-blue-400">
                        Current Value
                    </p>
                    <p class="text-2xl font-bold text-blue-900 dark:text-blue-100">
                        @Asset.FormattedCurrentValue
                    </p>
                </div>
                <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"></path>
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"></path>
                    </svg>
                </div>
            </div>
            <div class="mt-2 flex items-center">
                <span class="text-xs text-blue-600 dark:text-blue-400">
                    As of @DateTime.Now.ToString("MMM dd, yyyy")
                </span>
            </div>
        </div>

        <!-- Total Depreciation -->
        <div class="bg-gradient-to-r from-red-50 to-red-100 dark:from-red-900/20 dark:to-red-800/20 rounded-lg p-4 border border-red-200 dark:border-red-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-red-600 dark:text-red-400">
                        Total Depreciation
                    </p>
                    <p class="text-2xl font-bold text-red-900 dark:text-red-100">
                        @Asset.FormattedTotalDepreciation
                    </p>
                </div>
                <div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                </div>
            </div>
            <div class="mt-2 flex items-center">
                <span class="text-xs text-red-600 dark:text-red-400">
                    @Asset.DepreciationPercentage.ToString("F1")% of original value
                </span>
            </div>
        </div>

        <!-- Value Retention -->
        <div class="bg-gradient-to-r from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 rounded-lg p-4 border border-green-200 dark:border-green-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-green-600 dark:text-green-400">
                        Value Retention
                    </p>
                    <p class="text-2xl font-bold text-green-900 dark:text-green-100">
                        @((100 - Asset.DepreciationPercentage).ToString("F1"))%
                    </p>
                </div>
                <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                </div>
            </div>
            <div class="mt-2 flex items-center">
                <span class="text-xs text-green-600 dark:text-green-400">
                    Of purchase price retained
                </span>
            </div>
        </div>
    </div>

    <!-- Value Progress Bar -->
    <div class="mb-6">
        <div class="flex justify-between items-center mb-2">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                Value Depreciation Progress
            </span>
            <span class="text-sm text-gray-500 dark:text-gray-400">
                @Asset.DepreciationPercentage.ToString("F1")% depreciated
            </span>
        </div>
        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3">
            <div class="bg-gradient-to-r from-green-500 via-yellow-500 to-red-500 h-3 rounded-full transition-all duration-1000 relative" 
                 style="width: @Asset.DepreciationPercentage%">
                <div class="absolute right-0 top-0 w-3 h-3 bg-white border-2 border-gray-300 rounded-full transform translate-x-1/2 -translate-y-0"></div>
            </div>
        </div>
        <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400 mt-1">
            <span>New (@Asset.FormattedPurchasePrice)</span>
            <span>Current (@Asset.FormattedCurrentValue)</span>
            <span>Salvage (@Asset.SalvageValue?.ToString("C"))</span>
        </div>
    </div>

    <!-- Depreciation Timeline -->
    <div class="space-y-4">
        <h4 class="text-md font-semibold text-gray-900 dark:text-white">
            Depreciation Timeline
        </h4>
        
        <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-300 dark:bg-gray-600"></div>
            
            <!-- Timeline items -->
            <div class="space-y-6">
                <!-- Purchase Date -->
                <div class="relative flex items-center">
                    <div class="absolute left-0 w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div class="ml-12">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">
                                    Asset Purchased
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    @Asset.PurchaseDate?.ToString("MMMM dd, yyyy")
                                </p>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-semibold text-blue-600 dark:text-blue-400">
                                    @Asset.FormattedPurchasePrice
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    Original Value
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Current Status -->
                <div class="relative flex items-center">
                    <div class="absolute left-0 w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <div class="ml-12">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">
                                    Current Status
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    @DateTime.Now.ToString("MMMM dd, yyyy") â€¢ Age: @Asset.AgeInYears years
                                </p>
                            </div>
                            <div class="text-right">
                                <p class="text-sm font-semibold text-yellow-600 dark:text-yellow-400">
                                    @Asset.FormattedCurrentValue
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    Current Value
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- End of Useful Life -->
                @if (Asset.UsefulLifeYears > 0)
                {
                    var endOfLifeDate = Asset.PurchaseDate?.AddYears((int)Asset.UsefulLifeYears) ?? DateTime.Now;
                    var isEndOfLife = DateTime.Now >= endOfLifeDate;
                    
                    <div class="relative flex items-center">
                        <div class="absolute left-0 w-8 h-8 @(isEndOfLife ? "bg-red-500" : "bg-gray-400") rounded-full flex items-center justify-center">
                            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 12a1 1 0 102 0V8a1 1 0 10-2 0v4zm.293-10.707a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 4.414V7a1 1 0 11-2 0V4.414L7.707 5.707a1 1 0 01-1.414-1.414l3-3z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div class="ml-12">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                                        @(isEndOfLife ? "End of Useful Life (Reached)" : "End of Useful Life")
                                    </p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        @endOfLifeDate.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm font-semibold @(isEndOfLife ? "text-red-600 dark:text-red-400" : "text-gray-600 dark:text-gray-400")">
                                        @Asset.SalvageValue?.ToString("C")
                                    </p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        Salvage Value
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Depreciation Method Info -->
    <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
        <h5 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">
            Depreciation Method: @Asset.DepreciationMethod
        </h5>
        <div class="text-sm text-gray-600 dark:text-gray-400">
            @GetDepreciationMethodDescription()
        </div>
        <div class="mt-2 grid grid-cols-2 gap-4 text-sm">
            <div>
                <span class="font-medium text-gray-700 dark:text-gray-300">Annual Rate:</span>
                <span class="ml-1 text-gray-900 dark:text-white">
                    @Asset.DepreciationRate?.ToString("P1")
                </span>
            </div>
            <div>
                <span class="font-medium text-gray-700 dark:text-gray-300">Monthly Depreciation:</span>
                <span class="ml-1 text-gray-900 dark:text-white">
                    @Asset.MonthlyDepreciationAmount.ToString("C")
                </span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Asset Asset { get; set; } = null!;
    
    private bool showPercentage = false;

    private void ToggleView()
    {
        showPercentage = !showPercentage;
    }

    private string GetDepreciationMethodDescription()
    {
        return Asset.DepreciationMethod?.ToLower() switch
        {
            "straight-line" => "Depreciates by the same amount each year over the useful life of the asset.",
            "declining-balance" => "Depreciates by a fixed percentage of the remaining book value each year.",
            "double-declining-balance" => "Accelerated depreciation method that depreciates at twice the straight-line rate.",
            "sum-of-years-digits" => "Accelerated depreciation method based on the sum of the years of useful life.",
            _ => "Custom depreciation method as specified for this asset."
        };
    }
}