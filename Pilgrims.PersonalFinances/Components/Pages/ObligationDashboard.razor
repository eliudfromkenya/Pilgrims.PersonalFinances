    {
        public decimal TotalDebt { get; set; }
        public decimal MonthlyPayments { get; set; }
        public decimal DebtToIncomeRatio { get; set; }
        public int AveragePayoffMonths { get; set; }
        public int ActiveObligations { get; set; }
