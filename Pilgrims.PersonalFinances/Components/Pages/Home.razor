    private void ToggleQuickActions()
    {
        showQuickActions = !showQuickActions;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Simple initialization without complex animations
            await Task.Delay(100);
        }
    }
}
