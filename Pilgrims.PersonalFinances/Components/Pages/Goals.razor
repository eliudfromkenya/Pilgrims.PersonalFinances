                    <span class="font-semibold text-emerald-800 dark:text-emerald-200">$3,233</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Goals List -->
    <div class="glass-card p-6 rounded-2xl border border-white/20 backdrop-blur-lg bg-white/10 dark:bg-gray-800/10 mb-8">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white flex items-center">
                <span class="mr-2">üéØ</span> Active Goals
            </h3>
            <div class="flex items-center space-x-2">
                <button class="px-3 py-1 text-sm bg-emerald-100 text-emerald-800 rounded-full">All</button>
                <button class="px-3 py-1 text-sm text-gray-600 hover:bg-gray-100 rounded-full">Short-term</button>
                <button class="px-3 py-1 text-sm text-gray-600 hover:bg-gray-100 rounded-full">Long-term</button>
                <button class="px-3 py-1 text-sm text-gray-600 hover:bg-gray-100 rounded-full">Priority</button>
            </div>
        </div>
        
        <div class="space-y-4">
            @{
                var goals = new[]
                {
                    new { Name = "Emergency Fund (6 months)", Category = "Safety", Current = 25000, Target = 30000, MonthlyContribution = 500, TargetDate = "Mar 2024", Priority = "High", Status = "On Track", Icon = "üö®", Progress = 83 },
                    new { Name = "Retirement Savings", Category = "Long-term", Current = 185000, Target = 250000, MonthlyContribution = 1200, TargetDate = "Dec 2025", Priority = "High", Status = "On Track", Icon = "üèñÔ∏è", Progress = 74 },
                    new { Name = "House Down Payment", Category = "Major Purchase", Current = 65000, Target = 100000, MonthlyContribution = 800, TargetDate = "Jun 2025", Priority = "Medium", Status = "On Track", Icon = "üè†", Progress = 65 },
                    new { Name = "Dream Vacation to Japan", Category = "Lifestyle", Current = 8500, Target = 15000, MonthlyContribution = 300, TargetDate = "Sep 2024", Priority = "Low", Status = "On Track", Icon = "‚úàÔ∏è", Progress = 57 },
                    new { Name = "Kids Education Fund", Category = "Education", Current = 12200, Target = 50000, MonthlyContribution = 400, TargetDate = "Aug 2030", Priority = "Medium", Status = "Behind", Icon = "üéì", Progress = 24 },
                    new { Name = "Investment Portfolio", Category = "Wealth Building", Current = 5000, Target = 40000, MonthlyContribution = 250, TargetDate = "Dec 2027", Priority = "Medium", Status = "Behind", Icon = "üìà", Progress = 13 },
                    new { Name = "New Car Fund", Category = "Transportation", Current = 15000, Target = 35000, MonthlyContribution = 600, TargetDate = "Jan 2025", Priority = "Low", Status = "Ahead", Icon = "üöó", Progress = 43 },
                    new { Name = "Home Renovation", Category = "Home Improvement", Current = 8000, Target = 25000, MonthlyContribution = 350, TargetDate = "May 2025", Priority = "Low", Status = "On Track", Icon = "üî®", Progress = 32 }
                };
            }
            
            @foreach (var goal in goals)
            {
                var statusColor = goal.Status switch
                {
                    "On Track" => "text-green-500",
                    "Ahead" => "text-blue-500",
                    "Behind" => "text-red-500",
                    _ => "text-gray-500"
                };
                
                var priorityColor = goal.Priority switch
                {
                    "High" => "bg-red-100 text-red-800",
                    "Medium" => "bg-yellow-100 text-yellow-800",
                    "Low" => "bg-green-100 text-green-800",
                    _ => "bg-gray-100 text-gray-800"
                };
                
                <div class="p-4 bg-white/50 dark:bg-gray-700/50 rounded-xl hover:bg-white/70 dark:hover:bg-gray-700/70 transition-all duration-200 cursor-pointer group">
                    <div class="flex items-center justify-between mb-3">
                        <div class="flex items-center">
                            <div class="w-12 h-12 bg-gradient-to-r from-emerald-100 to-teal-200 dark:from-emerald-600 dark:to-teal-700 rounded-full flex items-center justify-center text-2xl mr-4 group-hover:scale-110 transition-transform duration-200">
                                @goal.Icon
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-800 dark:text-white">@goal.Name</h4>
                                <p class="text-sm text-gray-500">@goal.Category ‚Ä¢ Target: @goal.TargetDate</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <span class="px-2 py-1 text-xs @priorityColor rounded-full">@goal.Priority</span>
                            <span class="text-sm @statusColor font-medium">@goal.Status</span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <div class="flex justify-between items-center mb-1">
                            <span class="text-sm text-gray-600 dark:text-gray-300">Progress: @goal.Progress%</span>
                            <span class="text-sm font-medium text-gray-800 dark:text-white">$@goal.Current / $@goal.Target</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2">
                            <div class="bg-gradient-to-r from-emerald-400 to-teal-600 h-2 rounded-full transition-all duration-1000" 
                                 style="width: @(goal.Progress)%"></div>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center text-sm text-gray-600 dark:text-gray-300">
                        <span>Monthly: $@goal.MonthlyContribution</span>
                        <span>Remaining: $@(goal.Target - goal.Current)</span>
                        <span>@((goal.Target - goal.Current) / goal.MonthlyContribution) months to go</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Goal Insights & Recommendations -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Goal Insights -->
        <div class="glass-card p-6 rounded-2xl border border-white/20 backdrop-blur-lg bg-white/10 dark:bg-gray-800/10">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                <span class="mr-2">üí°</span> Goal Insights
            </h3>
            <div class="space-y-4">
                <div class="flex items-start space-x-3 p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
                    <span class="text-green-600 text-xl">üéâ</span>
                    <div>
                        <h4 class="font-medium text-green-800 dark:text-green-300">Great Progress!</h4>
                        <p class="text-sm text-green-600 dark:text-green-400">You're ahead of schedule on your car fund. Consider increasing your house down payment contribution.</p>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
                    <span class="text-blue-600 text-xl">üìä</span>
                    <div>
                        <h4 class="font-medium text-blue-800 dark:text-blue-300">Optimization Opportunity</h4>
                        <p class="text-sm text-blue-600 dark:text-blue-400">Your emergency fund is almost complete. You could redirect $300/month to other goals soon.</p>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3 p-3 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
                    <span class="text-yellow-600 text-xl">‚ö†Ô∏è</span>
                    <div>
                        <h4 class="font-medium text-yellow-800 dark:text-yellow-300">Attention Needed</h4>
                        <p class="text-sm text-yellow-600 dark:text-yellow-400">Your investment portfolio goal is behind schedule. Consider increasing monthly contributions by $100.</p>
                    </div>
                </div>
                
                <div class="flex items-start space-x-3 p-3 bg-purple-50 dark:bg-purple-900/20 rounded-lg">
                    <span class="text-purple-600 text-xl">üéØ</span>
                    <div>
                        <h4 class="font-medium text-purple-800 dark:text-purple-300">Goal Suggestion</h4>
                        <p class="text-sm text-purple-600 dark:text-purple-400">Consider setting up a goal for tax savings. You could benefit from maximizing your IRA contributions.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Achievement Milestones -->
        <div class="glass-card p-6 rounded-2xl border border-white/20 backdrop-blur-lg bg-white/10 dark:bg-gray-800/10">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                <span class="mr-2">üèÜ</span> Recent Achievements
            </h3>
            <div class="space-y-4">
                @{
                    var achievements = new[]
                    {
                        new { Title = "Emergency Fund Milestone", Description = "Reached 80% of emergency fund goal", Date = "Nov 2023", Icon = "üö®", Color = "text-red-500" },
                        new { Title = "Consistent Saver", Description = "Saved for 12 consecutive months", Date = "Oct 2023", Icon = "üí™", Color = "text-blue-500" },
                        new { Title = "Goal Crusher", Description = "Completed vacation fund goal early", Date = "Sep 2023", Icon = "‚úàÔ∏è", Color = "text-green-500" },
                        new { Title = "Investment Starter", Description = "Made first investment contribution", Date = "Aug 2023", Icon = "üìà", Color = "text-purple-500" },
                        new { Title = "Budget Master", Description = "Stayed under budget for 6 months", Date = "Jul 2023", Icon = "üéØ", Color = "text-yellow-500" }
                    };
                }
                
                @foreach (var achievement in achievements)
                {
                    <div class="flex items-center space-x-3 p-3 bg-white/50 dark:bg-gray-700/50 rounded-lg">
                        <div class="w-10 h-10 bg-gradient-to-r from-emerald-100 to-teal-200 dark:from-emerald-600 dark:to-teal-700 rounded-full flex items-center justify-center text-lg">
                            @achievement.Icon
                        </div>
                        <div class="flex-1">
                            <h4 class="font-medium text-gray-800 dark:text-white">@achievement.Title</h4>
                            <p class="text-sm text-gray-500">@achievement.Description</p>
                        </div>
                        <span class="text-xs text-gray-400">@achievement.Date</span>
                    </div>
                }
            </div>
            
            <div class="mt-4 p-3 bg-gradient-to-r from-emerald-100 to-teal-100 dark:from-emerald-900/20 dark:to-teal-900/20 rounded-lg text-center">
                <div class="text-2xl mb-1">üèÜ</div>
