                    <div class="text-2xl font-bold">8</div>
                    <div class="text-xs opacity-75 mt-1">üéØ 5 on track</div>
                </div>
                <div class="bg-gradient-to-r from-teal-400 to-teal-600 p-4 rounded-xl text-white">
                    <div class="text-sm opacity-90">Total Target</div>
                    <div class="text-2xl font-bold">$485,000</div>
                    <div class="text-xs opacity-75 mt-1">Across all goals</div>
                </div>
                <div class="bg-gradient-to-r from-cyan-400 to-cyan-600 p-4 rounded-xl text-white">
                    <div class="text-sm opacity-90">Progress</div>
                    <div class="text-2xl font-bold">62%</div>
                    <div class="text-xs opacity-75 mt-1">$300,700 saved</div>
                </div>
                <div class="bg-gradient-to-r from-blue-400 to-blue-600 p-4 rounded-xl text-white">
                    <div class="text-sm opacity-90">Monthly Savings</div>
                    <div class="text-2xl font-bold">$3,250</div>
                    <div class="text-xs opacity-75 mt-1">üìà +8% vs last month</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Goal Categories & Progress Overview -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Goal Categories -->
        <div class="glass-card p-6 rounded-2xl border border-white/20 backdrop-blur-lg bg-white/10 dark:bg-gray-800/10">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                <span class="mr-2">üìä</span> Goals by Category
            </h3>
            <div class="space-y-4">
                @{
                    var goalCategories = new[]
                    {
                        new { Name = "Emergency Fund", Current = 25000, Target = 30000, Progress = 83, Color = "from-red-400 to-red-600", Icon = "üö®" },
                        new { Name = "Retirement", Current = 185000, Target = 250000, Progress = 74, Color = "from-blue-400 to-blue-600", Icon = "üèñÔ∏è" },
                        new { Name = "House Down Payment", Current = 65000, Target = 100000, Progress = 65, Color = "from-green-400 to-green-600", Icon = "üè†" },
                        new { Name = "Vacation Fund", Current = 8500, Target = 15000, Progress = 57, Color = "from-purple-400 to-purple-600", Icon = "‚úàÔ∏è" },
                        new { Name = "Education Fund", Current = 12200, Target = 50000, Progress = 24, Color = "from-yellow-400 to-yellow-600", Icon = "üéì" },
                        new { Name = "Investment Goals", Current = 5000, Target = 40000, Progress = 13, Color = "from-indigo-400 to-indigo-600", Icon = "üìà" }
                    };
                }
                @foreach (var category in goalCategories)
                {
                    <div class="flex items-center justify-between">
                        <div class="flex items-center flex-1">
                            <span class="text-2xl mr-3">@category.Icon</span>
                            <span class="text-gray-700 dark:text-gray-300 flex-1">@category.Name</span>
                            <div class="w-24 bg-gray-200 dark:bg-gray-600 rounded-full h-2 mx-3">
                                <div class="bg-gradient-to-r @category.Color h-2 rounded-full transition-all duration-1000" 
                                     style="width: @(category.Progress)%"></div>
                            </div>
                        </div>
                        <div class="text-right">
                            <div class="font-semibold">@category.Progress%</div>
                            <div class="text-xs text-gray-500">$@category.Current / $@category.Target</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Monthly Savings Trend -->
        <div class="glass-card p-6 rounded-2xl border border-white/20 backdrop-blur-lg bg-white/10 dark:bg-gray-800/10">
            <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                <span class="mr-2">üìà</span> Monthly Savings Trend
            </h3>
            <div class="h-48 flex items-end justify-between space-x-2">
                @{
                    var months = new[] { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" };
                    var savings = new[] { 2800, 3100, 2950, 3200, 3400, 3150, 3300, 3500, 3250, 3400, 3600, 3250 };
                    var maxSavings = savings.Max();
                }
                @for (int i = 0; i < 12; i++)
                {
                    var height = (savings[i] / (double)maxSavings) * 100;
                    var isCurrentMonth = i == 11;
                    
                    <div class="flex-1 flex flex-col items-center">
                        <div class="@(isCurrentMonth ? "bg-gradient-to-t from-emerald-500 to-teal-600" : "bg-gradient-to-t from-gray-300 to-gray-500") rounded-t-lg transition-all duration-1000 hover:shadow-lg w-full" 
                             style="height: @(height)%; animation-delay: @(i * 0.05)s;">
                        </div>
                        <span class="text-xs text-gray-500 mt-2">@months[i]</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300">$@savings[i]</span>
                    </div>
                }
            </div>
            
            <div class="mt-4 p-3 bg-emerald-50 dark:bg-emerald-900/20 rounded-lg">
                <div class="flex items-center justify-between">
